{
    "containerDefinitions": [
        {
            "name": "leader",
            "image": "${IMAGE_REPOSITORY}/feed/leader:${COMPONENT_VERSION}",
            "memory": 500,
            "cpu": 256,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "feed-logs",
                    "awslogs-region": "${DEFAULT_REGION}",
                    "awslogs-stream-prefix": "leader"
                }
            },
            "portMappings": [
                {
                    "protocol": "tcp",
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "environment": [
                {
                    "name": "BROWSER_BASE_PORT",
                    "value": "4444"
                },
                {
                    "name": "CONTAINER_TIMEOUT",
                    "value": "10"
                },
                {
                    "name": "DATABASE_NAME",
                    "value": "feeds"
                }, 
                {
                    "name": "FLASK_PORT",
                    "value": "80"
                },
                {
                    "name": "KAFKA_ADDRESS",
                    "value": "kafka.feed:29092"
                },
                {
                    "name": "LEADER_START",
                    "value": "\"feed has started\""
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "DEBUG"
                },
                {
                    "name": "NANNY_HOST",
                    "value": "nanny.feed"
                },
                {
                    "name": "ROUTER_HOST",
                    "value": "routing.feed"
                },
                {
                    "name": "COMMANDS_HOST",
                    "value": "commands.feed"
                },
                {
                    "name": "SUMMARIZER_HOST",
                    "value": "summarizer.feed"
                },
                {
                    "name": "SELENIUM_PORT",
                    "value": "4444"
                },
                {
                    "name": "WORKER_TIMEOUT",
                    "value": "3"
                },
                {
                    "name": "LOGLEVEL",
                    "value": "DEBUG"
                }
            ]
        }
    ],
    "networkMode": "awsvpc",
    "family": "leader-task",
    "executionRoleArn": "arn:aws:iam::064106913348:role/FeedAdmin",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "memory": "512",
    "cpu": "256"
}
